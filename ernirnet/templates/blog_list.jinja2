{% extends "blog.jinja2" %}

{% block blog_main %}
    {% for post in posts %}
        <h4><a href="/blog/{{ post.url }}">{{ post.title }}</a>
            <small>({{ post.date.strftime("%Y-%m-%d") }})</small>
        </h4>
        <p>
            {{ post.excerpt }}
        </p>
        <p>
        <span>
            {% if post.comments|length == 1 %}
                {{ post.comments|length }} comment.
            {% else %}
                {{ post.comments|length }} comments.
            {% endif %}
        </span>
        <span>
            Tags:
            {% for tag in post.tags %}
                <a href="/blog/tags/{{ tag.name }}">{{ tag.name }}</a>
                {%- if not loop.last %},{% endif %}
            {% endfor %}
        </span>
        </p>
        </br>
    {% endfor %}
{% endblock blog_main %}